<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.newtask.newtaskFragment">

    <TextView
        android:id="@+id/newtasktext"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Add a New Task"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:textColor="#ba007a"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/ToDoName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_email"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="ToDo Name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <TextView
        android:id="@+id/DateTask"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Select Date"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/ADDTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E12867"
        android:insetLeft="85dp"
        android:insetRight="85dp"
        android:text="ADD" />

</LinearLayout>